@model Kursach.Models.Database.Entities.Copy

<form asp-action="AddNewCopy" asp-controller="Books">
    <div class="form-group">
        <label asp-for="IdentityNumber" class="control-label">Identity Number: </label>
        <input type="text" asp-for="IdentityNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Days" class="control-label">Days: </label>
        <input type="number" asp-for="Days" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Amount" class="control-label">Amount: </label>
        <input type="number" asp-for="Amount" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PublicationId" class="control-label">Publication Id: </label>
        <select name="publicationId" asp-items="ViewBag.PublicationList" asp-for="PublicationId"></select>
    </div>
    <div class="form-group">
        <label asp-for="StorageId" class="control-label">Storage Id: </label>
        <select name="storageId" asp-items="ViewBag.StorageList" asp-for="StorageId"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-default" />
    </div>
</form>